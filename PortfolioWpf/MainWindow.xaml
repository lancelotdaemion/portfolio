<Window x:Class="PortfolioWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PortfolioWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="25px">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <DataGrid Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Ipsums}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=Name, Mode=OneWay}" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="1" BorderBrush="Black" Margin="0 15" Padding="5px" Height="30px" VerticalAlignment="Top">
                <TextBlock Text="{Binding CurrentIpsum, Mode=OneWay}" Height="20px"></TextBlock>
            </Border>

            <Grid Grid.Column="1">
                <Border Grid.Column="1" BorderThickness="0" BorderBrush="Black" Margin="0 15" Padding="5px" HorizontalAlignment="Left">
                    <Button Command="{Binding AddIpsumCommand}" Height="25px" Width="35px" VerticalAlignment="Top" Content="Add"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
