<Window x:Class="PortfolioWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PortfolioWpf"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="25px">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- DataGrid -->
        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <DataGrid Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Ipsums}" SelectedItem="{Binding SelectedLoremIpsum, Mode=TwoWay}" CanUserAddRows="False" AutoGenerateColumns="False">
                
                <!--<EventTrigger>
                    <
                </EventTrigger>-->
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="CellEditEnding">
                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.EditIpsumCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=Name, Mode=OneWay}" Width="8*"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="1*"></DataGridTextColumn>
                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Button Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteIpsumCommand}" Height="25px" Width="55px" VerticalAlignment="Top" Content="Delete"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>

                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="1" BorderBrush="Black" Margin="0 15" Padding="5px" Height="30px" VerticalAlignment="Top">
                <TextBlock Text="{Binding CurrentIpsumText , Mode=OneWay}" Height="20px"></TextBlock>
            </Border>

            <Grid Grid.Column="1">
                <Border Grid.Column="1" BorderThickness="0" BorderBrush="Black" Margin="0 15 0 0" Padding="5px" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Button Command="{Binding AddIpsumCommand}" Height="25px" Width="35px" VerticalAlignment="Top" Content="Add"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
